proto_compile(
    name = "example_python_compile",
    outputs = ["thing_pb2.py"],
    plugins = ["//plugin/builtin:python"],
    proto = "example_proto",
)

proto_compile(
    name = "example_java_compile",
    outputs = ["example.srcjar"],
    plugins = ["//plugin/builtin:java"],
    proto = "example_proto",
    verbose = 3,
)
