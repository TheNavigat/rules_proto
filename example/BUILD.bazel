load("@rules_proto//proto:defs.bzl", "proto_library")
load("@build_stack_rules_proto//rules:proto_compile.bzl", "proto_compile")

# gazelle:proto_language cc enable true
# gazelle:proto_language py enable true
# gazelle:proto_language java enable true
# gazelle:proto_language closure_js enable true
# gazelle:proto_language common_js enable true
# gazelle:proto_language gogofast enable true

proto_library(
    name = "example_proto",
    srcs = ["thing.proto"],
    visibility = ["//visibility:public"],
    deps = ["@com_google_protobuf//:timestamp_proto"],
)

proto_compile(
    name = "example_cpp_compile",
    outputs = [
        "thing.pb.cc",
        "thing.pb.h",
    ],
    plugins = ["//plugin/builtin:cpp"],
    proto = "example_proto",
)

proto_compile(
    name = "example_closurejs_compile",
    options = {"//plugin/builtin:closurejs": ["library=example/example"]},
    outputs = ["example.js"],
    plugins = ["//plugin/builtin:closurejs"],
    proto = "example_proto",
)

proto_compile(
    name = "example_commonjs_compile",
    outputs = ["thing_pb.js"],
    plugins = ["//plugin/builtin:commonjs"],
    proto = "example_proto",
)

