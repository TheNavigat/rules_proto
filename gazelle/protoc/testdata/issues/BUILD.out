load("@rules_proto//proto:defs.bzl", "proto_library")
load("@build_stack_rules_proto//rules/proto:proto_compile_test.bzl", "proto_compile_test")
load("//bazel/python:defaults.bzl", "py_enum_choices_proto_compile", "py_library", "py_proto_compile")

# gazelle:proto package
# gazelle:proto_language py

proto_library(
    name = "issues_proto",
    srcs = ["issues.proto"],
    visibility = ["//visibility:public"],
    deps = ["//rosetta/rosetta:rosetta_proto"],
)

py_proto_compile(
    name = "issues_py_proto_compile",
    deps = [":issues_proto"],
)

proto_compile_test(
    name = "issues_py_proto_compile_test",
    srcs = ["issues_pb2.py"],
    rule = ":issues_py_proto_compile",
    visibility = ["//visibility:private"],
)

py_enum_choices_proto_compile(
    name = "issues_py_enum_choices_proto_compile",
    deps = [":issues_proto"],
)

proto_compile_test(
    name = "issues_py_enum_choices_proto_compile_test",
    srcs = ["issues_choices.py"],
    rule = ":issues_py_enum_choices_proto_compile",
    visibility = ["//visibility:private"],
)

py_library(
    name = "issues_py_library",
    srcs = [
        "issues_choices.py",
        "issues_pb2.py",
    ],
    imports = [".."],
    deps = ["//rosetta/rosetta:rosetta_py_library"],
)
