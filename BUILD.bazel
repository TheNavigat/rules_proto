load("@bazel_gazelle//:def.bzl", "gazelle")

# gazelle:prefix github.com/stackb/rules_proto
gazelle(name = "gazelle")

gazelle(
    name = "laze",
    gazelle = "//tools/laze",
)

filegroup(
    name = "all_files",
    testonly = True,
    srcs = [
        "BUILD.bazel",
        "WORKSPACE",
        "//protobuf:all_files",
        "//cc:all_files",
        "//python:all_files",
        "//internal:all_files",
        "//example/person/v1:all_files",
        "//example/place/v1:all_files",
        "//example/thing/v1:all_files",
        "//tools/gencopy:all_files",
        "//third_party:all_files",
    ] + glob(["*.bzl"]),
    visibility = ["//visibility:public"],
)
